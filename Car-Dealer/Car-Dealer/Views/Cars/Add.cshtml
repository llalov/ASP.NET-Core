@model CarFormModel

@{
    ViewData["Title"] = "Add Car";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Make"></label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelledDistance"></label>
                <input asp-for="TravelledDistance" min="0" class="form-control" />
                <span asp-validation-for="TravelledDistance" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartsIds"></label>
                <select asp-for="PartsIds" class="form-control" asp-items="@Model.Parts"></select>
                <span asp-validation-for="PartsIds" class="form-text text-danger"></span><br/>
                <small>* Hold 'Ctrl' to select multiple items.</small>

            </div>
            <div>
                <input type="submit" class="btn btn-success" value="Save" />
            </div>
        </form>
    </div>
</div>

