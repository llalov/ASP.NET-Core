@model IEnumerable<SaleListModel>


    @{
        ViewData["Title"] = "Sales";
    }

    <h2>@ViewData["Title"]</h2>
    <a href="/sales/add" class="btn btn-success">+ Add Sale</a>
    <br /><br />
    <a href="/sales/discounted" class="btn btn-info">Check Discounted Sales</a><br /><br />

    <table class="table table-bordered table-hover">
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                Price
            </th>
            <th>
                Discount
            </th>
            <th>
                Discounted Price:
            </th>
            <th>

            </th>
        </tr>
        @foreach (var sale in Model)
        {
        <tr>
            <td>
                @sale.CustomerName
            </td>
            <td>
                $@sale.Price
            </td>
            <td>
                @sale.Discount.ToString("F2")%
            </td>
            <td>
                $@sale.DiscountedPrice.ToString("F2")
            </td>
            <td>
                <a href="/sales/@sale.Id" class="btn btn-info">Details</a>
            </td>
        </tr>
        }
    </table>