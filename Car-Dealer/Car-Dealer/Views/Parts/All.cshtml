@model IEnumerable<PartListModel>

@{
    ViewData["Title"] = "Parts";
}

<h2>@ViewData["Title"]</h2>
<br/>
<a href="/parts/add" class="btn btn-primary">Add Part</a>
<br /><br />
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Supplier
            </th>
            <th>
                Quantity
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var part in Model)
        {
            <tr>
                <td>
                    @part.Name
                </td>
                <td>
                    $@part.Price.ToString("F2")
                </td>
                <td>
                    @part.Supplier
                </td>
                <td>
                   @part.Quantity
                </td>
            </tr>
        }
    </tbody>
</table>