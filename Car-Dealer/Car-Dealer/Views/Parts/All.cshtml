@model IEnumerable<PartListModel>

@{
    ViewData["Title"] = "Parts";
}

<h2>@ViewData["Title"]</h2>
<br/>
<a href="/parts/add" class="btn btn-primary">Add Part</a>
<br /><br />
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Supplier
            </th>
            <th>
                Quantity
            </th>
            <th>
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var part in Model)
        {
        <tr>
            <td>
                @part.Name
            </td>
            <td>
                $@part.Price.ToString("F2")
            </td>
            <td>
                @part.Supplier
            </td>
            <td>
                @part.Quantity
            </td>
            <td>
                <a href="/parts/edit/@part.Id" class="btn btn-warning">Edit</a>
            </td>
            <td>
                <!-- Trigger the modal with a button -->
                <button type="button" id="delBtn" class="btn btn-danger" onclick="saveId(@part.Id)" data-toggle="modal" data-target="#myModal">Delete</button>
                <script language="JavaScript">
                    function saveId(partId) {
                        document.cookie = partId + '';
                    }
                    function dlt()
                    {
                        var id = document.cookie;
                        console.log("/parts/delete/"+id)
                        window.location="/parts/delete/"+id;
                    }
                </script>

                <!-- Modal -->
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Delete part</h4>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to delete this part?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" onclick="dlt()">Delete</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Modal -->

            </td>
        </tr>
        }
    </tbody>
</table>