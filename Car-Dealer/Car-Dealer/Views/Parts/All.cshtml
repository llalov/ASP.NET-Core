@model IEnumerable<PartListModel>

@{
    ViewData["Title"] = "Parts";
}

<h2>@ViewData["Title"]</h2>
<a href="/parts/add" class="btn btn-success">+ Add Part</a>
<br /><br />
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Supplier
            </th>
            <th>
                Quantity
            </th>
            <th>
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var part in Model)
        {
        <tr>
            <td>
                @part.Name
            </td>
            <td>
                $@part.Price.ToString("F2")
            </td>
            <td>
                @part.Supplier
            </td>
            <td>
                @part.Quantity
            </td>
            <td>
                <a href="/parts/edit/@part.Id" class="btn btn-warning btn-sm">Edit</a>
            </td>
        </tr>
        }
    </tbody>
</table>